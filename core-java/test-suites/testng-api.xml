<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Boyka Framework API Suite" verbose="2" parallel="classes">
    <listeners>
        <listener class-name="com.github.wasiqb.boyka.testng.listeners.TestResultListener"/>
    </listeners>
    <test name="Test Rest API">
        <classes>
            <class name="com.github.wasiqb.boyka.testng.api.restful.RestfulBookerEndToEndTests">
                <methods>
                    <include name="testCreateBooking"/>
                    <include name="testGetBooking"/>
                    <include name="testUpdateBooking"/>
                    <include name="testUpdatePartialBooking"/>
                    <include name="testDeleteBooking"/>
                    <include name="testDeletedBooking"/>
                    <include name="testJsonSchemaFileException"/>
                </methods>
            </class>
            <class name="com.github.wasiqb.boyka.testng.api.postman.ApiPostmanTest">
                <methods>
                    <include name="testFormBodyRequest"/>
                </methods>
            </class>
            <class name="com.github.wasiqb.boyka.testng.api.restful.DataDrivenBookingTest"/>
            <class name="com.github.wasiqb.boyka.testng.api.ssl.ApiSecurityTest"/>
        </classes>
    </test>
</suite>
