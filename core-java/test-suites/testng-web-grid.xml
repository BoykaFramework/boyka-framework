<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Boyka Framework Local Grid Web Suite" verbose="2">
    <listeners>
        <listener class-name="io.github.boykaframework.testng.listeners.TestResultListener"/>
    </listeners>
    <test name="Test web on Selenium Grid Browser">
        <parameter name="platformType" value="WEB"/>
        <parameter name="driverKey" value="test_selenium_grid"/>
        <classes>
            <class name="io.github.boykaframework.testng.ui.saucedemo.SauceDemoTest"/>
            <class name="io.github.boykaframework.testng.ui.theinternet.AlertsTest"/>
            <class name="io.github.boykaframework.testng.ui.theinternet.CheckboxTest"/>
            <class name="io.github.boykaframework.testng.ui.theinternet.ContextMenuTest"/>
            <class name="io.github.boykaframework.testng.ui.theinternet.DoubleClickTest"/>
            <class name="io.github.boykaframework.testng.ui.theinternet.DragDropTest"/>
            <class name="io.github.boykaframework.testng.ui.theinternet.FileUploadTest"/>
            <class name="io.github.boykaframework.testng.ui.theinternet.FramesTest"/>
            <class name="io.github.boykaframework.testng.ui.theinternet.HoverTest"/>
            <class name="io.github.boykaframework.testng.ui.theinternet.WindowTest"/>
        </classes>
    </test>
</suite>
