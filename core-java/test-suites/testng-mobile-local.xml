<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Boyka Mobile Local Suite" verbose="2" parallel="tests" thread-count="2">
    <test name="Test Boyka Mobile on Local Android Emulator WDIO" parallel="classes">
        <parameter name="platformType" value="ANDROID"/>
        <parameter name="driverKey" value="test_local_wdio_android"/>
        <classes>
            <class name="com.github.wasiqb.boyka.testng.ui.wdio.WdioDemoTest">
                <methods>
                    <include name="testDragDrop" />
                    <include name="testSignUp" />
                    <include name="testWebView" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Test Boyka Mobile on Local iOS Simulator WDIO" parallel="classes">
        <parameter name="platformType" value="IOS"/>
        <parameter name="driverKey" value="test_local_wdio_ios"/>
        <classes>
            <class name="com.github.wasiqb.boyka.testng.ui.wdio.WdioDemoTest">
                <methods>
                    <include name="testDragDrop" />
                    <include name="testWebView" />
                </methods>
            </class>
        </classes>
    </test>
</suite>
