<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Boyka Web Local Suite" verbose="2">
    <listeners>
        <listener class-name="com.github.wasiqb.boyka.testng.listeners.TestResultListener"/>
    </listeners>
    <test name="Test Boyka web on Local Chrome">
        <parameter name="appType" value="WEB"/>
        <parameter name="driverKey" value="test_local_chrome"/>
        <packages>
            <package name="com.github.wasiqb.boyka.testng.web.saucedemo"/>
            <package name="com.github.wasiqb.boyka.testng.web.theinternet"/>
        </packages>
    </test>
    <test name="Test Boyka web on Local Firefox">
        <parameter name="appType" value="WEB"/>
        <parameter name="driverKey" value="test_local_firefox"/>
        <packages>
            <package name="com.github.wasiqb.boyka.testng.web.saucedemo"/>
            <package name="com.github.wasiqb.boyka.testng.web.theinternet"/>
        </packages>
    </test>
</suite>
