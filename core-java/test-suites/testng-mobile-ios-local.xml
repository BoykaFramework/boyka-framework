<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Boyka Framework Local Mobile iOS Suite" verbose="2">
    <listeners>
        <listener class-name="io.github.boykaframework.testng.listeners.TestResultListener"/>
    </listeners>
    <test name="Test Mobile on Local iOS Simulator">
        <parameter name="platformType" value="IOS"/>
        <parameter name="driverKey" value="test_local_wdio_ios"/>
        <classes>
            <class name="io.github.boykaframework.testng.ui.wdio.WdioDemoTest">
                <methods>
                    <include name="testDragDrop"/>
                    <include name="testWebView"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
