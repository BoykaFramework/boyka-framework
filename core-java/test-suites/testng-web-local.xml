<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Boyka Web Local Suite" verbose="2">
    <test name="Test Boyka web on Local Chrome">
        <parameter name="appType" value="WEB"/>
        <parameter name="driverKey" value="test_local_chrome"/>
        <classes>
            <class name="com.github.wasiqb.boyka.testng.web.TestWeb">
                <methods>
                    <include name="testLogin"/>
                    <include name="testAddToCart"/>
                    <include name="testProductDetailsPage"/>
                    <include name="testProductCartPage"/>
                    <include name="testCheckoutStep1"/>
                    <include name="testCheckoutStep2"/>
                    <include name="testSignOut"/>
                </methods>
            </class>
            <class name="com.github.wasiqb.boyka.testng.web.TestWebActions">
                <methods>
                    <include name="testAcceptAlert"/>
                    <include name="testAcceptConfirmAlert"/>
                    <include name="testDismissConfirmAlert"/>
                    <include name="testDismissPromptAlert"/>
                </methods>
            </class>
        </classes>
    </test>
