<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Boyka Framework LambdaTest Mobile Suite" verbose="2" parallel="tests">
    <listeners>
        <listener class-name="com.github.wasiqb.boyka.testng.listeners.TestResultListener"/>
    </listeners>
    <test name="Test Mobile app on LambdaTest Android Device" group-by-instances="true">
        <parameter name="platformType" value="ANDROID"/>
        <parameter name="driverKey" value="test_lt_android"/>
        <classes>
            <class name="com.github.wasiqb.boyka.testng.ui.saucedemo.SauceDemoTest">
                <methods>
                    <include name="testLogin"/>
                    <include name="testAddToCart"/>
                    <include name="testCheckoutStep1"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Test Mobile app on LambdaTest iOS Device" group-by-instances="true">
        <parameter name="platformType" value="IOS"/>
        <parameter name="driverKey" value="test_lt_ios"/>
        <classes>
            <class name="com.github.wasiqb.boyka.testng.ui.saucedemo.SauceDemoTest">
                <methods>
                    <include name="testLogin"/>
                    <include name="testAddToCart"/>
                    <include name="testCheckoutStep1"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
