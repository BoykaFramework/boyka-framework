  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "commitlint": "^17.0.0",
    "eslint": "^8.16.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.1",
    "lerna": "^4.0.0",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "typescript": "^4.6.4"
  },
  "scripts": {
    "prepare": "husky install",
    "build:site": "yarn workspace website build",
    "start:site": "yarn workspace website start",
    "deploy:site": "yarn workspace website deploy",
    "lint": "eslint --report-unused-disable-directives \"**/*.{js,jsx,ts,tsx,mjs}\"",
    "lint:ci": "yarn lint --quiet",
    "format": "prettier --check .",
    "format-fix": "prettier --write .",
    "clear:website": "yarn workspace website clear",
    "changelog": "lerna-changelog"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "yarn lint",
      "yarn format",
      "yarn format-fix"
    ],
    "**/*.{js,jsx}": [
      "yarn lint",
      "yarn format",
      "yarn format-fix"
    ],
    "/core-java/*": [
      "mvn install -f core-java/pom.xml -DskipTests"
    ]
  }
}
